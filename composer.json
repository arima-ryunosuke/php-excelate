{
  "config": {
    "platform": {
      "php": "8.2"
    }
  },
  "name": "ryunosuke/php-excelate",
  "type": "library",
  "description": "ryunosuke PHP Template Library",
  "license": "MIT",
  "authors": [
    {
      "name": "ryunosuke",
      "email": "ryunosuke.arima@gmail.com"
    }
  ],
  "require": {
    "phpoffice/phpspreadsheet": "1.*|2.*|3.*"
  },
  "require-dev": {
    "phpunit/phpunit": "9.*"
  },
  "autoload": {
    "psr-4": {
      "ryunosuke\\Excelate\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ryunosuke\\Test\\Excelate\\": "tests/Test"
    }
  },
  "scripts": {
    "build": [
      "@composer test",
      "@composer clean"
    ],
    "test": [
      "vendor/bin/phpunit --configuration=tests/phpunit.xml",
      "PHPVERSION=php7.4 vendor/bin/phpunit --configuration=tests/phpunit.xml",
      "PHPVERSION=php8.0 vendor/bin/phpunit --configuration=tests/phpunit.xml",
      "PHPVERSION=php8.2 vendor/bin/phpunit --configuration=tests/phpunit.xml"
    ],
    "clean": [
      "@php bin/clean.php"
    ]
  }
}
